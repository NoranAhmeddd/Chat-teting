<AnchorPane fx:id="mainAP" prefHeight="396" prefWidth="478"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17"
            fx:controller="chatApp.Controller">
    <children>
        <Button fx:id="sendButton" text="Send" layoutX="404" layoutY="338" />
        <TextField fx:id="messageField" layoutX="38" layoutY="338" prefHeight="26" prefWidth="361" />
        <ScrollPane fx:id="messagesPane" layoutX="30" layoutY="70" prefHeight="256" prefWidth="418" fitToWidth="true">
            <content>
                <VBox fx:id="messagesBox" prefHeight="248" prefWidth="412" />
            </content>
        </ScrollPane>
        <Label text="Room Chat" layoutX="114" layoutY="26">
            <font>
                <Font name="Arial Rounded MT Bold" size="23" />
            </font>
        </Label>
    </children>
</AnchorPane>


    